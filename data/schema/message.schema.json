{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Queen of Peace Message",
  "description": "Medjugorje message structured for meditation, liturgy matching, and media production",
  "type": "object",
  "required": ["date", "language", "source", "message"],
  "properties": {
    "date": {
      "type": "string",
      "description": "Message date (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "language": {
      "type": "string",
      "enum": ["hr", "en", "ko"],
      "description": "Original or translated language"
    },
    "source": {
      "type": "string",
      "description": "Official source or archive reference"
    },
    "visionary": {
      "type": "string",
      "description": "Visionary who received the message"
    },
    "message": {
      "type": "string",
      "description": "Full original message text (no summary)"
    },
    "themes": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Categorized themes (peace, prayer, conversion, fasting, hope, etc.)"
    },
    "liturgical_links": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Related liturgical themes or Gospel keywords"
    },
    "media": {
      "type": "object",
      "properties": {
        "tts_duration_sec": {
          "type": "number",
          "description": "Recommended TTS duration in seconds"
        },
        "voice": {
          "type": "string",
          "description": "Recommended voice (e.g. sunkyung)"
        }
      }
    }
  }
}
